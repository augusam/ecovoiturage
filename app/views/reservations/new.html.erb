<!-- app/views/reservations/new.html.erb -->
<h2>Réserver ce Trajet</h2>

<%= form_for @reservation do |f| %>
  <%= f.hidden_field :trip_id, value: @trip.id %>

  <%= f.label :seat_count %>
  <%= f.number_field :seat_count, required: true, min: 1 %>

  <%= f.submit "Réserver ce Trajet" %>
<% end %>
